extends ../shared/_adminLayout

block vars
	- var title = 'Tools'

block body
	div.row.col-xs-12.col-md-6.col-md-offset-3
		input#tools_userInjection_input.form-control(type='text' placeholder='请使用联系邮箱，或者人名进行搜索')
		button#tools_btnUserInjection.btn.btn-success.pull-right(style='margin-top:15px;') 用户注入
	script(src='/content/javascript/pagejs/admin/tools/admin_tools_common.js?timestamp=#{timestamp}')
	- if(isMobile)
		script(src='/content/javascript/pagejs/admin/tools/admin_tools_mobile.js?timestamp=#{timestamp}')
	- else
		script(src='/content/javascript/pagejs/admin/tools/admin_tools_pc.js?timestamp=#{timestamp}')